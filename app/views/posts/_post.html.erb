<div class="card">
  <%= link_to image_tag(post.image, class: :card__img ), post_path(post.id), method: :get %>
  <div class="card__body">
    <%= link_to post.title, post_path(post.id), method: :get, class: :card__title%>
    <p class="card__summary">
      <%= post.catch_copy %>
      <%= link_to post.user.name, user_path(post.user), class: :card__user %>
    </p>
  </div>
</div>
